{
	"name": "emailpage",
	"version": "1.0.0",
	"description": "A service that creates HTML pages and sends email links to them",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"start": "npm run build && node dist/index.js",
		"dev": "tsc --watch & node --watch dist/index.js",
		"test": "jest"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"body-parser": "^1.20.2",
		"express": "^4.18.2",
		"nodemailer": "^6.9.9",
		"prettier": "^3.6.1"
	},
	"devDependencies": {
		"@types/body-parser": "^1.19.6",
		"@types/express": "^5.0.3",
		"@types/node": "^24.0.4",
		"@types/nodemailer": "^6.4.17",
		"jest": "^29.7.0",
		"mock-fs": "^5.2.0",
		"supertest": "^6.3.4",
		"typescript": "^5.8.3"
	},
	"prettier": {
		"arrowParens": "avoid",
		"jsxBracketSameLine": true,
		"printWidth": 120,
		"semi": true,
		"tabWidth": 4,
		"trailingComma": "es5",
		"useTabs": true,
		"ignore": [
			".dockerignore"
		]
	},
	"type": "commonjs"
}
