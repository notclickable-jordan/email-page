{
	"name": "email-page",
	"version": "0.1.0",
	"description": "Turn JSON requests into HTML pages and send email links to them",
	"main": "dist/index.js",
	"type": "commonjs",
	"scripts": {
		"build": "tsc && npm run tailwind",
		"start": "tsc --watch & npx tailwindcss -i ./src/tailwind.css -o ./public/css/styles.css --watch & node --watch dist/index.js",
		"tailwind": "npx tailwindcss -i ./src/tailwind.css -o ./public/css/styles.css --minify"
	},
	"keywords": [],
	"author": "Jordan Roher",
	"license": "MIT",
	"dependencies": {
		"@types/body-parser": "^1.19.6",
		"@types/express": "^5.0.3",
		"@types/node": "^24.0.6",
		"@types/nodemailer": "^6.4.17",
		"body-parser": "^2.2.0",
		"express": "^5.1.0",
		"mock-fs": "^5.5.0",
		"nodemailer": "^7.0.3",
		"prettier": "^3.6.2",
		"typescript": "^5.8.3"
	},
	"prettier": {
		"arrowParens": "avoid",
		"jsxBracketSameLine": true,
		"printWidth": 120,
		"semi": true,
		"tabWidth": 4,
		"trailingComma": "es5",
		"useTabs": true,
		"ignore": [
			".dockerignore"
		]
	},
	"devDependencies": {
		"autoprefixer": "^10.4.21",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.11"
	}
}
